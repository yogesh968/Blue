generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  DOCTOR
  PATIENT
  ADMIN
  HOSPITAL
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String?
  phone     String?
  role      Role
  googleId  String? @unique

  doctor    Doctor?
  patient   Patient?
}

model Hospital {
  id        Int       @id @default(autoincrement())
  name      String
  city      String
  address   String
  phone     String?

  doctors   Doctor[]
}

model Doctor {
  id           Int             @id @default(autoincrement())
  userId       Int  @unique
  hospitalId   Int
  speciality   String
  experience   Int
  fees         Int
  qualification String

  user         User            @relation(fields: [userId], references: [id])
  hospital     Hospital        @relation(fields: [hospitalId], references: [id])
  timings      DoctorTiming[]
  appointments Appointment[]
  reviews      Review[]
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model DoctorTiming {
  id        Int      @id @default(autoincrement())
  doctorId  Int
  dayOfWeek DayOfWeek
  startTime String
  endTime   String

  doctor    Doctor   @relation(fields: [doctorId], references: [id])
}

model Patient {
  id        Int       @id @default(autoincrement())
  userId    Int @unique
  gender    String
  dob       DateTime?
  medicalHistory Json?

  user         User         @relation(fields: [userId], references: [id])
  appointments Appointment[]
  reviews      Review[]
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model Appointment {
  id              Int       @id @default(autoincrement())
  patientId       Int
  doctorId        Int
  appointmentDate DateTime
  durationMinutes Int?
  reason          String
  status          AppointmentStatus    @default(PENDING)

  patient  Patient   @relation(fields: [patientId], references: [id])
  doctor   Doctor    @relation(fields: [doctorId], references: [id])
  payment  Payment?
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CARD
  UPI
  NETBANKING
  CASH
}

model Payment {
  id            Int       @id @default(autoincrement())
  appointmentId Int @unique
  amount        Float
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod PaymentMethod
  transactionId String?
  createdAt     DateTime  @default(now())

  appointment   Appointment @relation(fields: [appointmentId], references: [id])
}

model Review {
  id         Int      @id @default(autoincrement())
  rating     Int
  reviewText String?
  patientId  Int
  doctorId   Int

  patient  Patient @relation(fields: [patientId], references: [id])
  doctor   Doctor  @relation(fields: [doctorId], references: [id])
}
