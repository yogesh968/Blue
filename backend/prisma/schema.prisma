generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  DOCTOR
  PATIENT
  ADMIN
  HOSPITAL
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String  @unique
  password  String?
  phone     String?
  role      Role
  googleId  String?

  doctor    Doctor?
  patient   Patient?
}

model Hospital {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  city      String
  address   String
  phone     String?

  doctors     Doctor[]
  bedBookings BedBooking[]
  ambulances  Ambulance[]
  invitations DoctorInvitation[]
}

model Doctor {
  id           String          @id @default(auto()) @map("_id") @db.ObjectId
  userId       String          @unique @db.ObjectId
  hospitalId   String?         @db.ObjectId
  speciality   String
  experience   Int
  fees         Int
  qualification String
  createdAt    DateTime        @default(now())

  user         User            @relation(fields: [userId], references: [id])
  hospital     Hospital?       @relation(fields: [hospitalId], references: [id])
  timings      DoctorTiming[]
  appointments Appointment[]
  reviews      Review[]
  locations    DoctorLocation[]
  schedule     DoctorSchedule?
  invitations  DoctorInvitation[]
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model DoctorTiming {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  doctorId  String   @db.ObjectId
  dayOfWeek DayOfWeek
  startTime String
  endTime   String

  doctor    Doctor   @relation(fields: [doctorId], references: [id])
}

model Patient {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @unique @db.ObjectId
  gender    String
  dob       DateTime?
  medicalHistory Json?

  user              User               @relation(fields: [userId], references: [id])
  appointments      Appointment[]
  reviews           Review[]
  bedBookings       BedBooking[]
  ambulanceBookings AmbulanceBooking[]
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model Appointment {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  patientId       String    @db.ObjectId
  doctorId        String    @db.ObjectId
  appointmentDate DateTime
  durationMinutes Int?
  reason          String
  status          AppointmentStatus    @default(PENDING)

  patient  Patient   @relation(fields: [patientId], references: [id])
  doctor   Doctor    @relation(fields: [doctorId], references: [id])
  payment  Payment?
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum PaymentMethod {
  CARD
  UPI
  NETBANKING
  CASH
}

model Payment {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  appointmentId String    @unique @db.ObjectId
  amount        Float
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod PaymentMethod
  transactionId String?
  createdAt     DateTime  @default(now())

  appointment   Appointment @relation(fields: [appointmentId], references: [id])
}

model Review {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  rating     Int
  reviewText String?
  patientId  String   @db.ObjectId
  doctorId   String   @db.ObjectId

  patient  Patient @relation(fields: [patientId], references: [id])
  doctor   Doctor  @relation(fields: [doctorId], references: [id])
}

model DoctorLocation {
  id        Int      @id @default(autoincrement())
  doctorId  Int
  name      String
  address   String
  city      String
  phone     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  doctor        Doctor   @relation(fields: [doctorId], references: [id])
}

enum BedType {
  GENERAL
  ICU
  PRIVATE
  SEMI_PRIVATE
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
}

model BedBooking {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  patientId     String        @db.ObjectId
  hospitalId    String        @db.ObjectId
  bedType       BedType
  admissionDate DateTime
  dischargeDate DateTime?
  status        BookingStatus @default(PENDING)
  totalAmount   Float?
  charges       Json?
  createdAt     DateTime      @default(now())

  patient       Patient       @relation(fields: [patientId], references: [id])
  hospital      Hospital      @relation(fields: [hospitalId], references: [id])
}

enum AmbulanceType {
  BASIC
  ADVANCED
  ICU
}

model Ambulance {
  id           String           @id @default(auto()) @map("_id") @db.ObjectId
  vehicleNumber String          @unique
  type         AmbulanceType
  hospitalId   String           @db.ObjectId
  isAvailable  Boolean          @default(true)
  location     String?

  hospital     Hospital         @relation(fields: [hospitalId], references: [id])
  bookings     AmbulanceBooking[]
}

model AmbulanceBooking {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  patientId   String    @db.ObjectId
  hospitalId  String?   @db.ObjectId
  ambulanceId String?   @db.ObjectId
  pickupLocation String
  destination String
  bookingTime DateTime
  status      BookingStatus @default(PENDING)
  amount      Float?
  ambulanceNumber String?
  driverName  String?
  createdAt   DateTime @default(now())

  patient     Patient  @relation(fields: [patientId], references: [id])
  ambulance   Ambulance? @relation(fields: [ambulanceId], references: [id])
}

model DoctorSchedule {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  doctorId  String   @unique @db.ObjectId
  schedule  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctor    Doctor   @relation(fields: [doctorId], references: [id])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model DoctorInvitation {
  id         String           @id @default(auto()) @map("_id") @db.ObjectId
  hospitalId String           @db.ObjectId
  doctorId   String           @db.ObjectId
  status     InvitationStatus @default(PENDING)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  hospital   Hospital         @relation(fields: [hospitalId], references: [id])
  doctor     Doctor           @relation(fields: [doctorId], references: [id])
}
